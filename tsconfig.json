{
  "extends": "./paths.json",
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "DOM",
      "ES6",
      "esnext",
      "DOM.Iterable",
      "ScriptHost",
      "ES2016.Array.Include"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": ["react", "react-dom"]
  },
  "include": [
    "declarations/styled.d.ts",
    "declarations/index.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
